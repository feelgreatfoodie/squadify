<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <!-- <link rel="icon" href="../../../../favicon.ico"> -->
  <link rel="stylesheet" href="../stylesheets/style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


  <title>
    <%= title %>
  </title>

</head>

<body>
  <!-- Navigation Bar  -->
  <div id="pagenavbar">
    <!-- Navbar gets inserted here -->
  </div>

  <main role="main">

    <div class="container-fluid">

      <form id="host">
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="eventTitle">Adventure Title</label>
            <input type="text" class="form-control" id="eventTitle" placeholder="Name your adventure" value="" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="eventDescription">Adventure Description</label>
            <input type="text" class="form-control" id="eventDescription" placeholder="Enter a description" required>
          </div>
          <div class="col-md-4 mb-3">
            <label for="eventDateTime">Adventure Date & Time</label>
            <input type="text" class="form-control datetimepicker-input" id="eventDateTime" data-toggle="datetimepicker" data-target="#datetimepicker5" required>
          </div>
            <div class="col-md-6 mb-3">
              <label for="eventTitle">Adventure Duration</label>
              <input type="number" class="form-control" id="duration" placeholder="How many minutes?" value="" required>
            </div>
          <div class="col-md-4 mb-3">
            <label for="eventLocation">Adventure Location</label>
            <input type="text" class="form-control" id="eventLocation" placeholder="Adventure starting location" value="" required>
          </div>
          <div class="col-md-4 mb-3">
            <label for="eventDifficulty">Adventure Difficulty</label>
              <select id="eventDifficulty" class="form-control" placeholder="Choose one of the following" required>
                <option selected>Choose one of the following</option>
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
                <option value=5>5</option>
              </select>
            </div>
          <div class="col-md-4 mb-3">
            <label for="eventImage">Adventure Image</label>
            <input type="text" class="form-control" id="eventImage" placeholder="Image URL" required>
          </div>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck">
        Agree to terms and conditions
      </label>
          </div><hr>
          <button class="btn btn-primary" type="submit">Post Adventure</button>
        </div>
      </form>
    </div>

    </div>

  </main>

  <footer class="container-fluid text-center">
    <p><br/> &copy; Team War Dogs 2018</p>
  </footer>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
  <script src="../source/navbar.js" charset="utf-8"></script>
  <script src="../source/host.js" charset="utf-8"></script>
</body>

</html>
